<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="single_colored_brick" params="id pose sx sy sz mass mat">
<model name="${id}">
	<link name="${id}_link">
            <pose>${pose}</pose>
            <inertial> 
		<mass>${mass}</mass>
                <inertia> 
			<ixx>${(1.0/12.0)*mass*(pow(sy,2)+pow(sz,2))}</ixx> <ixy>0</ixy> 
			<ixz>0</ixz> <iyy>${(1.0/12.0)*mass*(pow(sx,2)+pow(sz,2))}</iyy> 
			<iyz>0</iyz> <izz>${(1.0/12.0)*mass*(pow(sx,2)+pow(sy,2))}</izz> 
		</inertia>
            </inertial>
            
            <visual name="visual">
		<material> 
			<script>
				<uri>gazebo.material</uri>
				<name>${mat}</name>
			</script> 
		</material>
                <geometry>
                    <mesh>
                        <uri>model://single_red_brick/meshes/Brick_RibShape_Red_redux.stl</uri>
                        <scale>0.01 0.01 0.01</scale>
                    </mesh>
                </geometry>
            </visual>
            
            <collision name="collision">
                <geometry>
                    <mesh>
                        <uri>model://single_red_brick/meshes/Brick_RibShape_Red_redux.stl</uri>
                        <scale>0.01 0.01 0.01</scale>
                   </mesh>
                </geometry>
            </collision>
        </link>
</model>
</xacro:macro>

</robot>